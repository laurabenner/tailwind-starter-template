{
  "name": "tailwind-html-starter",
  "version": "0.0.2",
  "description": "A quick start plain HTML + Tailwind + Postcss project template.",
  "main": "index.js",
  "scripts": {
    "dev": "postcss ./src/style.css -o ./src/output.css  --watch --verbose",
    "build": "postcss ./src/style.css -o ./src/output.css --verbose",
    "prettier-format": "prettier src/**/*.html --write"
  },
  "keywords": [
    "tailwindcss starter",
    "tailwindcss",
    "tailwind",
    "starter",
    "tailwindcss-starter"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.26",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "alpinejs": "^3.12.3"
  }
}
